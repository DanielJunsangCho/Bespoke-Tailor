{
  "manifest_version": 3,
  "name": "Bespoke Resume",
  "version": "1.0",
  "description": "Automatically tailor your resume for job applications using AI",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://docs.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "key":"",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Bespoke Resume"  
  },
  "oauth2": {
    "client_id": "866896908660-gvkujh75pqtct9o12ra8obg234o21dof.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/documents",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}